    input(type='hidden', name='service', value='redis')
    input(type='hidden', name='endpoint', value='publisher')

    label(for='server') Server
    input(name='server', id='server', value='localhost')
    br

    label(for='channel') Channel
    input(name='channel', id='channel', value='aaaa')
